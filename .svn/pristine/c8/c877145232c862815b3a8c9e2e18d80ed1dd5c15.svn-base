<ion-modal-view>
    <ion-header-bar>
        <h1 ng-if="loginModalStatus === 'LOGIN'" class="title">登录车装甲</h1>

        <h1 ng-if="loginModalStatus === 'REGISTER'" class="title">注册车装甲账户</h1>

        <h1 ng-if="loginModalStatus === 'RECOVERPASSWORD'" class="title">验证手机号码</h1>

        <h1 ng-if="loginModalStatus === 'RESETPASSWORD'" class="title">设置新密码</h1>

        <div class="buttons">
            <button class="button button-clear" ng-click="closeLogin()">关闭</button>
        </div>
    </ion-header-bar>
    <ion-content>
        <div ng-if="loginModalStatus==='LOGIN'">
            <div class="list">
                <label class="item item-input">
                    <span class="input-label">手机号</span>
                    <input type="tel" ng-model="loginModel.userName">
                </label>
                <label class="item item-input">
                    <span class="input-label">密码</span>
                    <input type="password" ng-model="loginModel.password">
                </label>
            </div>
            <div class="padding text-center ">
                <button class="button button-block button-positive" ng-click="login()">登录</button>
                <!--<button class="button button-block button-balanced" ng-click="loginWithQQ()">-->
                    <!--<i style="background: url('img/qq.png');   background-size: cover; no-repeat;height:36px; width:36px;display: block;position: absolute;"></i>使用QQ登录-->
                <!--</button>-->
            </div>
            <div class="padding-left padding-right text-center button-bar ">
                <button class="button button-stable " ng-click="recoverPassword()"> 忘记密码</button>
                <button class="button button-stable   " ng-click="changeStatus('REGISTER')">注册</button>
            </div>
        </div>
        <div ng-if="loginModalStatus==='REGISTER'">
            <div class="list">
                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="tel" placeholder="手机号" ng-model="registerModel.userName">
                    </label>
                </div>
                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="tel" placeholder="推荐人手机号码" ng-model="registerModel.referee">
                    </label>
                </div>
                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="tel" placeholder="验证码" ng-model="registerModel.validationCode">
                    </label>
                    <button class="button button-small button-positive" ng-if="!requestCodeProcessing"
                            ng-click="requestCodeWithRegister()">
                        获取验证码
                    </button>

                    <button class="button button-small button-positive" disabled ng-if="requestCodeProcessing">
                        {{counterWithRequestCode}}秒后重发
                    </button>
                </div>
                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="password" placeholder="设置密码" ng-model="registerModel.password">
                    </label>
                </div>
                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="password" placeholder="重复密码" ng-model="registerModel.confirmPassword">
                    </label>
                </div>
            </div>
            <div class="padding">
                <button class="button button-block button-positive" ng-click="register()">注册</button>
                <button class="button button-block button-balanced" ng-click="changeStatus('LOGIN')">转到登录页</button>
                </button>
            </div>
        </div>
        <div ng-if="loginModalStatus === 'RECOVERPASSWORD'">
            <div class="list">
                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="tel" placeholder="手机号码" ng-model="resetPasswordModel.userName">
                    </label>
                </div>

                <div class="item item-input-inset">
                    <label class="login-item-input-wrapper">
                        <input type="tel" placeholder="短信验证码" ng-model="resetPasswordModel.validationCode">
                    </label>

                    <button class="button button-small button-positive" disabled ng-if="requestCodeProcessing">
                        {{counterWithRequestCode}}秒后重发
                    </button>

                    <button class="button button-small button-positive" ng-if="!requestCodeProcessing"
                            ng-click="requestCodeWithRecovery()">
                        获取验证码
                    </button>
                </div>
            </div>

            <div class="padding">
                <button class="button button-block button-balanced" ng-click="validateCode()">下一步</button>

                <button class="button button-block button-stable" ng-hide="recoveryPasswordOnly"
                        ng-click="changeStatus('LOGIN')">返回
                </button>
            </div>
        </div>
        <div ng-if="loginModalStatus === 'RESETPASSWORD'">
            <div class="item item-input-inset">
                <label class="login-item-input-wrapper">
                    <input type="password" placeholder="新密码" ng-model="resetPasswordModel.password">
                </label>
            </div>
            <div class="item item-input-inset">
                <label class="login-item-input-wrapper">
                    <input type="password" placeholder="重复密码" ng-model="resetPasswordModel.confirmPassword">
                </label>
            </div>

            <div class="padding">
                <button class="button button-block button-positive" ng-click="resetPassword()">修改</button>
                <button class="button button-block button-stable" ng-hide="recoveryPasswordOnly" ng-click="changeStatus('LOGIN')">返回</button>
            </div>
        </div>
    </ion-content>
</ion-modal-view>
