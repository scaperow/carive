{% extends "layout/admin.html" %}
{% block content %}


<div class="row">
    <nav>
        <div class="navbar-header">
            <a class="navbar-brand" href="#">编辑包材费用</a>
        </div>
    </nav>
</div>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-body">

            {%set messages=handler.get_flashed_messages() %}
            {%if messages%}
            <div class="msg" style="color:red;">
                {% for type, msg in messages%}
                <span>{{msg}}</span>
                {% endfor %}
            </div>
            {%endif%}

            <form action="" method="post" enctype="multipart/form-data">
                {{xsrf()}}

                <div class="form-group has-success">
                    <label class="control-label">工作日期</label>
                    <input type="text" name="work_date" id="work_date" value="{{work_date}}" class="Wdate form-control"  onClick="WdatePicker()" style="width:205px; height: 34px;" required placeholder="工作日期"  />
                </div>

                <div class="form-group has-success">
                    <label class="control-label">耗材名称</label>
                    <input type="text" name="name" class="form-control" value="{{co.name}}"  required  placeholder="耗材名称" />
                </div>

                <div class="form-group has-success">
                    <label class="control-label">耗材类型</label>
                    <input type="text" name="type" class="form-control" value="{{co.type}}"  required  placeholder="耗材类型" />
                </div>

                <div class="form-group has-success">
                    <label class="control-label">耗材用量</label>
                    <input type="text" name="quantity" class="form-control" value="{{co.quantity or 0.0}}"  required  placeholder="耗材用量" title="请输入位数字" pattern="^([1-9][\d]{0,7}|0)(\.[\d]{1,2})?$" />
                </div>

                <div class="form-group has-success">
                    <label class="control-label">耗材费用（元）</label>
                    <input type="text" name="price" class="form-control" value="{{co.price or 0.0}}"  required  placeholder="耗材费用" title="请输入位数字" pattern="^([1-9][\d]{0,7}|0)(\.[\d]{1,2})?$"  />
                </div>


                <div class="form-group has-success">
                    <input type="submit" name="sub" value="提 交" class="btn btn-outline btn-primary btn-sm">
                    <!--<input type="reset" name="sub" value="重 置" class="btn btn-outline btn-primary btn-sm">-->
                </div>

            </form>

        </div>
    </div>

</div>

{% endblock %}

{% block js %}
<script>
    $(function(){
         var myDate = new Date();
            var strMonth = myDate.getMonth()>9?(myDate.getMonth()+1):'0' + (myDate.getMonth()+1);
            var strDay = myDate.getDate()>9?myDate.getDate().toString():'0' + myDate.getDate();
            var c_time = $("#work_date").val();
            if(c_time == '')
                $("#work_date").val(myDate.getFullYear() + '-' + strMonth + '-' + strDay);
     });
</script>
{% endblock %}