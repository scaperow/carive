{% extends "layout/store.html" %}
{% block content %}
<div class="row">
    <nav>
        <div class="navbar-header">
            <a class="navbar-brand" href="#">商品分类编辑</a>
        </div>
    </nav>
</div>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-body">

            <form action="" method="post" enctype="multipart/form-data">
                {{xsrf()}}
                <div class="form-group has-success">
                    <label class="control-label">分类名称</label>
                    <input type="text" class="form-control"  name="name" value="{{c.name}}" required  placeholder="请输入分类名称" />
                </div>
                <div class="form-group has-success">
                    <label class="control-label">分类编码</label>
                    <input type="text" class="form-control"  name="code" value="{{c.code}}"  placeholder="分类名称只允许为字母或数字" />
                </div>
                <div class="form-group has-success">
                    <input type="submit" name="sub" value="提交" class="btn btn-outline btn-primary btn-sm">
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}