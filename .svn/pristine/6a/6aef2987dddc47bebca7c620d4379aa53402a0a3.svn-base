{% block js %}
<script type="text/javascript">
//star
$(document).ready(function(){
    var description = new Array("非常不满意：商品完全不可用。","不满意：商品勉强可用，远低于预期。","一般满意：商品比较符合描述，质量可用，略低于预期。","满意：商品符合描述，质量良好，达到预期。","非常满意：商品符合描述，质量非常好，超出预期!");
    var description2 = new Array("非常不满意：发货速度比预期慢 10 天以上。","不满意：发货速度比预期慢 5 到 10 天。","一般满意：发货速度比预期慢 1 到 5 天。","满意：发货速度快，达到预期。","非常满意：发货速度很快，超出预期!");
    var description3 = new Array("非常不满意：比市场贵了好几倍。","不满意：比超市的价格还要贵。","一般满意：还行吧。","满意：价格公道，跟菜市场的价格差不多。","非常满意：超值，超出预期!");
    var description4 = new Array("非常不满意：服务无法响应，或服务态度极差，没有解决问题。","不满意：服务响应速度非常慢，服务态度差，没有解决问题。","一般满意：服务响应速度慢，服务态度一般，解决了问题。","满意：服务响应速度达到预期，服务态度好，解决了问题。","非常满意：服务响应速度超出预期，服务态度很好，解决了问题!");

    starts("#showb","#desc",description,"#star > li",".start1");
    starts("#showb2","#desc2",description2,"#star2 > li",".start2");
    starts("#showb3","#desc3",description3,"#star3 > li",".start3");
    starts("#showb4","#desc4",description4,"#star4 > li",".start4");
});
function starts(showb,desc,description,star,start){
    var stepW = 24;
    var stars = $(star);
    var descriptionTemp;
    $(showb).css("width",0);
    stars.each(function(i){
        $(stars[i]).click(function(e){
            var n = i+1;
            $(showb).css({"width":stepW*n});
            $(start).val(n);
            descriptionTemp = description[i];
            $(this).find('a').blur();
            return stopDefault(e);
            return descriptionTemp;
        });
    });
    stars.each(function(i){
        $(stars[i]).hover(
            function(){
                $(desc).text(description[i]);
            },
            function(){
                if(descriptionTemp != null)
                    $(desc).text("当前您的评价为："+descriptionTemp);
                else
                    $(desc).text(" ");
            }
        );
    });
}
function stopDefault(e){
    if(e && e.preventDefault)
           e.preventDefault();
    else
           window.event.returnValue = false;
    return false;
};

</script>
{% endblock %}