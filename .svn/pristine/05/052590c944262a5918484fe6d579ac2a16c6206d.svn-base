<ion-view view-title="意见反馈">
  <ion-content class="stable-bg">
    <div class="list">
      <div class="item">
        <label class="login-item-input-wrapper">
          <textarea placeholder="请填写您的意见，我们会努力改进" ng-model="$parent.content" rows="8"></textarea>
        </label>
      </div>
    </div>
    <div class="padding">
      <button class="button button-block button-balanced" ng-click="submit()">
        提交
      </button>
    </div>
  </ion-content>
</ion-view>
