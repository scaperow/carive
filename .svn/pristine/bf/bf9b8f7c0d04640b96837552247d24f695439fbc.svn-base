{% extends "layout/user.html" %}
{% block subcontent %}

<h1> 我收藏的产品 </h1>
<div class="content">

        <table cellpadding="3">
        <tr>
            <th>图片</th>
            <th>商品名</th>
            <th>操作</th>
        </tr>
        <tbody>
        {% for p in products %}
        <tr>
            <td>
                <a target="_blank" href="/product/{{p.defaultstandard}}"><img src="{{p.cover}}" width="100" height="100"></a>
            </td>
            <td>
                {{p.name}}
                <br>
                {{p.resume}}
                <br>
                当前价格：{{p.standards[0].price}}元/份
            </td>
            <td>
                <a target="_blank" href="/product/{{p.defaultstandard}}">详情</a>
                <a href="/user/removefav/{{p.id}}" onclick="return confirm('确实要删除吗？');">删除</a>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>

</div>
{% endblock %}