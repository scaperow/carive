<ion-view view-title="搜索">
 <ion-nav-buttons side="right">
  <button class="button button-icon icon "></button>
 </ion-nav-buttons>
 <ion-content class="stable-bg">
  <ion-list>
   <div class="item-input-inset ">
    <label class="item-input-wrapper">
     <input type="text" placeholder="商品名称" ng-model="$parent.keyword">
    </label>
    <a class="button calm button-icon icon ion-ios-search" ng-click="searchProduct()"></a>
   </div>
   <!-- <ion-item>
    <p>
     搜索最多的
    </p>
   </ion-item> -->
   <!-- <ion-item>
    <ion-scroll direction="x" style="overflow: scroll;white-space: nowrap; margin-top:10px; padding-bottom: 10px;">
     <button class="button button-small" style="margin-right: 7px " ng-repeat="hot in hots" ng-click="setKeyword(hot.keywords)">{{hot.keywords}}</button>
    </ion-scroll>
   </ion-item> -->
   <div class="separate-big"></div>
   <ion-list>
    <ion-item>
     <p>最近使用关键词</p>
    </ion-item>
    <div class="item " ng-repeat="keyword in keywords" ng-click="setKeyword('{{keyword}}')">
     {{keyword}}
    </div>
   </ion-list>
   <div class="padding" ng-if="keywords.length > 0">
    <button class="button button-full button-assertive " ng-click="clearLocalKeyword()">
     清除记录
    </button>
   </div>
 </ion-content>
</ion-view>
