<ion-view view-title="搜索">
    <ion-nav-buttons side="right">
        <button class="button button-icon icon "></button>
    </ion-nav-buttons>
    <ion-content>
        <div class="list">
            <div class="item-input-inset ">
                <label class="item-input-wrapper">
                    <input type="text" placeholder="商品名称" ng-model="$parent.keyword">
                </label>
                <a class="button button-icon icon ion-ios7-search" ng-click="searchProduct()"></a>
            </div>

            <div class="item " ng-if="hots.length > 0">
                <div class="balanced">
                    搜索最多的
                </div>
                <ion-scroll direction="x"
                            style="overflow: scroll;white-space: nowrap; margin-top:10px; padding-bottom: 10px;">

                    <a class="button button-small" style="margin-right: 7px"
                       ng-repeat="hot in hots" ng-click="setKeyword(hot.keywords)">{{hot.keywords}}</a>
                </ion-scroll>
            </div>

            <div class="item " ng-if="keywords.length > 0">
                <div class="balanced">
                    最近使用关键词
                </div>
            </div>
            <div class="item" ng-click="setKeyword(keyword)" ng-repeat="keyword in keywords">
                <p>
                    {{keyword}}
                </p>
                <!--<a class="button button-small" style="margin-right: 2px"-->
                <!--ng-click="setKeyword('{{hot.keywords}}')"></a>-->
            </div>
        </div>

        <div class="padding" ng-if="keywords.length > 0">
            <button class="button button-block" ng-click="clearLocalKeyword()">
                清除记录
            </button>
        </div>
    </ion-content>
</ion-view>
